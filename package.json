{
  "name": "@typeform/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint configuration for Typeform front-end projects",
  "main": "index.js",
  "repository": "git@github.com:Typeform/eslint-config-typeform.git",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "jest",
    "eslint": "eslint",
    "lint": "yarn run eslint .",
    "publish:github": "npm config set '//npm.pkg.github.com/:_authToken' $GH_TOKEN && npm publish --registry https://npm.pkg.github.com"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn run eslint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./prettier",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "eslint": ">=7.27.x",
    "typescript": ">=4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@semantic-release/exec": "^5.0.0",
    "eslint": "^7.27.0",
    "husky": "^4.3.0",
    "jest": "^28.1.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.0",
    "typescript": "^4.7.2"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "successCmd": "yarn run publish:github"
        }
      ]
    ]
  },
  "babel": {}
}
