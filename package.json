{
  "name": "@typeform/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint configuration for Typeform front-end projects",
  "type": "module",
  "main": "index.js",
  "repository": "git@github.com:Typeform/eslint-config-typeform.git",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "eslint": "eslint",
    "lint": "yarn run eslint .",
    "publish:npm": "npm config set @typeform:registry https://registry.npmjs.org/ && npm config set '//registry.npmjs.org/:_authToken' $NPM_TOKEN && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn run eslint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./prettier",
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.18.1"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=5"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "successCmd": "yarn run publish:npm"
        }
      ]
    ]
  },
  "babel": {}
}
