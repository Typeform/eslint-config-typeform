{
  "name": "@typeform/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint configuration for Typeform front-end projects",
  "main": "index.js",
  "repository": "git@github.com:Typeform/eslint-config-typeform.git",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "jest",
    "eslint": "eslint",
    "lint": "yarn run eslint .",
    "publish:npm": "npm config set '//registry.npmjs.org/:_authToken' $NPM_TOKEN && npm publish --registry https://registry.npmjs.org"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn run eslint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./prettier",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "eslint": ">=7.27.x",
    "typescript": ">=4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@semantic-release/exec": "^6.0.3",
    "eslint": "^7.27.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "typescript": "^4.7.2"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "successCmd": "yarn run publish:npm"
        }
      ]
    ]
  },
  "babel": {}
}
