{
  "name": "@typeform/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint configuration for Typeform front-end projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./prettier": "./prettier/index.cjs"
  },
  "repository": "git@github.com:Typeform/eslint-config-typeform.git",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "husky && yarn build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "eslint": "eslint",
    "lint": "yarn run eslint .",
    "publish:npm": "yarn build && npm config set @typeform:registry https://registry.npmjs.org/ && npm publish --provenance --access public",
    "publish:github": "npm config set @typeform:registry https://npm.pkg.github.com/ && npm config set '//npm.pkg.github.com/:_authToken' \"${GH_TOKEN}\" && npm publish --tag beta"
  },
  "lint-staged": {
    "*.{js,ts}": "yarn run eslint --fix",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./prettier/index.cjs",
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "typescript-eslint": "^8.18.1",
    "yarn": "^1.22.22"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=5"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/npm": "^13.1.1",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "tarballDir": "dist",
          "pkgRoot": "."
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "successCmd": "yarn run publish:github"
        }
      ]
    ]
  },
  "babel": {}
}
