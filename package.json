{
  "name": "@typeform/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint configuration for Typeform front-end projects",
  "main": "index.js",
  "repository": "git@github.com:Typeform/eslint-config-typeform.git",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "echo 'no tests' && exit 0",
    "eslint": "eslint -c ./index.js",
    "lint": "yarn run eslint .",
    "publish:github": "npm config set '//npm.pkg.github.com/:_authToken' $GH_TOKEN && npm publish --registry https://npm.pkg.github.com"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-config-standard": "^15.0.0",
    "eslint-config-standard-jsx": "^9.0.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.2"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "@babel/eslint-parser": "7.x",
    "eslint": "7.x"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@semantic-release/exec": "^5.0.0",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "semantic-release": "^17.2.1"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "successCmd": "yarn run publish:github"
        }
      ]
    ]
  },
  "babel": {}
}
